<% count = 0 %>
<% @posts.each do |post| %>
    <% yori = post.yori %>
    <% user = yori.user %>
    <% if (count % 4) == 0 %>
      <div class="row" style="margin-top: 1em">
    <% end %>
        <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
          <div class="card h-100">
            <a href="/yojo/yori/<%= yori.id %>"><img class="card-img-top" src=<%= url_for(post.main_image) %>></a>
            <div class="card-body">
              <h4 class="card-title">
                <a href="/yojo/yori/<%= yori.id %>"><%= yori.name %></a>
                <a href="/yojo/kitchen/<%= user.id %>"><p>by. <%= user.username %></p></a>
              </h4>
              <p class="card-text"><%= post.main %></p>
            </div>
          </div>
        </div>
    <% if count % 4 == 3 %>
      </div>
    <% end %>
    <% count += 1 %> 
<% end %>
<% if count % 4 != 0 %>
  </div>
<% end %>

<% if @yoris.any? %>
    <ul id="page-list" class="pagination">
      <li class="page-item"><a class="page-link" <% if @current_page > 0 %>
      onclick="combine(<%=@current_page - 1%>)"<% end %>>prev</a></li>
    <% for i in 0...@max_page %>
      <li class="page-item"><a <% if i == @current_page%>id="current-page"<%end%> class="page-link"
      onclick="combine(<%=i%>)"><%=i + 1%></a></li>
    <% end %>
      <li class="page-item"><a class="page-link" <% if @current_page+1 < @max_page %>
      onclick="combine(<%=@current_page + 1%>)"<% end %>>next</a></li>
    </ul>
<% end %>

