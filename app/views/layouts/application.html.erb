<!DOCTYPE html>
<html>
  <head>
    <title>Yori Jori</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <%= favicon_link_tag asset_path('profile-color.png') %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </head>
  
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top" id="navbar">
      <div class="container" style="max-width: 100%; padding-left: 3rem; padding-right: 3rem">
        <a class="navbar-brand js-scroll-trigger" id="logo" href="/">YOJO</a>
        <div class="navbar-collapse">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li style="margin: auto; margin-right: 1rem; font-family:godoMaum; font-size: 1.4em; color: gray">
                Hi, <a id="profile_link" href="/users/edit"><%=current_user.username%></a>
              </li>
              
              <li class="nav-link">
              <%= link_to 'Log Out', destroy_user_session_path, method: 'delete' %>
              </li>
            <% else %>
              <li class="nav-link">
              <%= link_to 'Log In', new_user_session_path %>
              </li>
              <li class="nav-link">
              <%= link_to 'Sign Up', new_user_registration_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>