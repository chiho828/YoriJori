<div class="text-center sign">
<h2>Forgot Passowrd?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs sign-wrap">
      <%= f.label :username, class: 'sr-only', required: true%>
      <%= f.text_field :login, required: false, autofocus: true, class: 'form-control',  placeholder: 'User ID' %>
  </div>

    <p> Please enter your User ID and we will send you instruction via email </p>
  <div class="form-actions">
    <%= f.button :submit, "Get Instruction" %>
  </div><br>
<% end %>

<span>
<%= render "devise/shared/links" %>
</span>
</div>

