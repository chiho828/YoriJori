<div class="text-center sign">
  <h2>Sign Up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
    
    <div class="form-inputs sign-wrap">
      
      <%= f.email_field :email, autofocus: true, required: true, placeholder: "Email", class: "form-control" %><br>
      <%= f.email_field :username, required: true, placeholder: "User ID", class: "form-control" %><br>
      <%= f.password_field :password, required: true, autocomplete: "off", placeholder: "Password (6 or more characters)", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control" %><br>
      <%= f.password_field :password_confirmation, required: true, autocomplete: "off", placeholder: "Confirm Password", class: "form-control" %><br>
      
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign Up", class: 'rounded' %>
    </div><br>
  <% end %>
  
  <span>
  <%= render "devise/shared/links" %>
  </span>
</div>



